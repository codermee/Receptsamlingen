@model Receptsamlingen.Mvc.Models.SearchModel

<h1>Sök</h1>
@using (Html.BeginForm("DoSearch", "Search", FormMethod.Post))
{
	<div class="row">
		<div class="col-xs-10">
			@Html.TextBoxFor(x => x.Query, new { @class = "form-control", placeholder = "Sök..." })
		</div>
		<div class="col-xs-2 search-button">
			<input type="submit" value="Sök &raquo;" class="btn btn-warning" />
		</div>
	</div>
}
<br />
<div class="row">
	<div class="col-md-12">
		@if (Model.SearchPerformed && Model.SearchResult == null)
		{
			<label class="label label-warning info-text">Sökningen gav inga resultat.</label>
		}
	</div>
</div>
<div class="row">
	<div class="col-md-12">
		@if (Model.SearchPerformed && Model.SearchResult != null)
		{
			<h2>Sökresultat</h2>
			<ul>
				@foreach (var r in Model.SearchResult)
				{
					<li>
						&rsaquo;&rsaquo;&nbsp;@Html.ActionLink(r.Name, "id", "recipe", new { id = r.Id }, null)
						<br />
					</li>
				}
			</ul>
		}
	</div>
</div>