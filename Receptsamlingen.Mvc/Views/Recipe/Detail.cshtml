@using Receptsamlingen.Mvc.Classes
@model Receptsamlingen.Mvc.Models.RecipeModel

<h1>@Model.Recipe.Name</h1>

<div class="FloatLeft">
	<label class="Text FontItalic">Kategori:</label>
	<span class="Text">
		@Html.DisplayFor(x => x.Category)
	</span>
	<br />
	<label class="Text FontItalic">Huvudråvara:</label>
	<span class="Text">
		@Html.DisplayFor(x => x.DishType)
	</span>
	<br />
	<label class="Text FontItalic">Antal portioner:</label>
	<span class="Text">
		@if (Model.Recipe.Portions.HasValue && Model.Recipe.Portions.Value > 0)
		{
			@Html.DisplayFor(x => x.Recipe.Portions.Value)
		}
	</span>
	<br />
	<br />
	<label class="Text FontItalic">Receptet är:</label>
	<span class="Text">
		@Html.DisplayFor(x => x.Specials)
	</span>
</div>
<div id="ratingPanel" class="FloatRight MarginRight">
	@Html.HiddenFor(x => x.AvarageRating)
	@Html.Hidden("Authenticated", SessionHandler.IsAuthenticated)
	<div id="rating" class="FloatLeft" style="">
		<!-- -->
	</div>
