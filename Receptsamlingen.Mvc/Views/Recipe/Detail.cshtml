	{
		@if (SessionHandler.IsAuthenticated)
		{
			<input type="submit" value="Rösta!" class="SmallButton" />
			<label class="FloatRight ErrorText">fel</label>
		}
	}*@
</div>
<div class="ClearFix">
	<!-- -->
</div>
<br />
<label class="Text FontItalic FontColorOrange">Ingredienser:</label>
<br />
@Html.TextAreaFor(x => x.Recipe.Ingredients, new { @class = "TextBox MultilineTextBox NoBorder", @readonly = true })
<br />
<br />
<label class="Text FontItalic FontColorOrange">Gör så här:</label>
<br />
@Html.TextAreaFor(x => x.Recipe.Description, new { @class = "TextBox MultilineTextBox NoBorder", @readonly = true })
<br />
<br />
@if (SessionHandler.User != null && SessionHandler.User.Role.Equals(20))
{
	<div id="adminPanel">
		@Html.ActionLink(">> Redigera", "edit", "recipe", new { id = Model.Recipe.Id }, new { @class = "UnitText" })
		@Html.ActionLink(">> Radera", "delete", "recipe", new { id = Model.Recipe.Id }, new { @class = "UnitText FloatRight" })
	</div>
}
